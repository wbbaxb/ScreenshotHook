<Window
    x:Class="ScreenshotHook.Presentation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:ScreenshotHook.Presentation.Behaviors"
    xmlns:converters="clr-namespace:ScreenshotHook.Presentation.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ScreenshotHook.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:viewmodels="clr-namespace:ScreenshotHook.Presentation.ViewModels"
    Title="ScreenHook"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />

        <SolidColorBrush x:Key="mainColor" Color="#2196F3" />

        <Style x:Key="cbxTbStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="ComboBoxItem">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Green" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource mainColor}" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="White" />

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>

            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="Border"
                            Margin="5,0"
                            BorderBrush="Transparent"
                            BorderThickness="0,0,0,3">
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="10,5"
                                ContentSource="Header"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource mainColor}" />
                                <Setter Property="Foreground" Value="{StaticResource mainColor}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Minimum" Value="0" />
            <Setter Property="Maximum" Value="255" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Border
        Width="600"
        Height="500"
        Background="White"
        BorderBrush="{StaticResource mainColor}"
        BorderThickness="2"
        CornerRadius="10">
        <i:Interaction.Behaviors>
            <behaviors:ItemMouseDownBehavior />
        </i:Interaction.Behaviors>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid>
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="16"
                        Text="—"
                        ToolTip="最小化">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding MinsizeCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>

                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="16"
                        Text="✕"
                        ToolTip="关闭">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding CloseCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <TabControl
                Grid.Row="1"
                Margin="10"
                BorderBrush="{StaticResource mainColor}"
                BorderThickness="1">
                <TabControl.Resources>
                    <Style BasedOn="{StaticResource TabItemStyle}" TargetType="TabItem" />
                </TabControl.Resources>

                <TabItem Header="进程选择">
                    <StackPanel Margin="50" VerticalAlignment="Center">
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox ItemsSource="{Binding FilteredProcessInfos}" SelectedItem="{Binding ProcessInfo}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid MaxWidth="450" ToolTip="{Binding ProcessName}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Style="{StaticResource cbxTbStyle}" Text="{Binding ProcessId}" />

                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="10,0"
                                                Style="{StaticResource cbxTbStyle}"
                                                Text="-" />

                                            <TextBlock
                                                Grid.Column="2"
                                                Foreground="{StaticResource mainColor}"
                                                Style="{StaticResource cbxTbStyle}"
                                                Text="{Binding ProcessName}" />
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button
                                Grid.Column="1"
                                Width="60"
                                Margin="10,0,0,0"
                                Command="{Binding RefreshCommand}"
                                Content="Refresh" />
                        </Grid>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Height="40"
                                VerticalContentAlignment="Center"
                                FontSize="18"
                                Text="{Binding FilterText}" />

                            <Button
                                Grid.Column="1"
                                Width="60"
                                Margin="10,0,0,0"
                                Command="{Binding FilterCommand}"
                                Content="Filter" />
                        </Grid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="水印设置">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ScrollViewer
                            Padding="10"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" Text="文本：" />

                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        VerticalContentAlignment="Center"
                                        Text="{Binding Watermark.Text, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="字体：" />

                                        <ComboBox
                                            Grid.Column="1"
                                            ItemsSource="{Binding FontFamilies}"
                                            SelectedItem="{Binding Watermark.FontFamily}" />
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="大小：" />

                                        <ComboBox
                                            Grid.Column="1"
                                            ItemsSource="{Binding FontSizes}"
                                            SelectedItem="{Binding Watermark.FontSize}" />
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="2" Margin="0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Margin="0,10"
                                        VerticalAlignment="Center"
                                        Text="颜色：" />

                                    <Grid Grid.Row="1" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Text="R:" />

                                        <Slider Grid.Column="1" Value="{Binding Watermark.ColorR}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Width="30"
                                            Text="{Binding Watermark.ColorR}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid Grid.Row="2" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Text="G:" />

                                        <Slider Grid.Column="1" Value="{Binding Watermark.ColorG}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Width="30"
                                            Text="{Binding Watermark.ColorG}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid Grid.Row="3" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Text="B:" />

                                        <Slider Grid.Column="1" Value="{Binding Watermark.ColorB}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Width="30"
                                            Text="{Binding Watermark.ColorB}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid Grid.Row="4" Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Text="A:" />

                                        <Slider Grid.Column="1" Value="{Binding Watermark.ColorA}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Width="30"
                                            Text="{Binding Watermark.ColorA}"
                                            TextAlignment="Right" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="Gray"
                        Text="{Binding ProcessInfo.ProcessName, StringFormat=目标进程: {0}}" />

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding HookCommand}" Content="Hook" />

                        <Button
                            Grid.Column="1"
                            Margin="5,0"
                            Background="IndianRed"
                            Command="{Binding UnHookCommand}"
                            Content="UnHook" />
                    </Grid>
                </StackPanel>

                <Grid Grid.Column="1" Margin="20,0">
                    <StackPanel>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            Text="水印预览：" />

                        <Border Margin="0,10" BorderThickness="0">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{Binding Watermark.FontFamily}"
                                FontSize="{Binding Watermark.FontSize}"
                                Foreground="{Binding Watermark.Color, Converter={StaticResource ColorToBrushConverter}}"
                                Text="{Binding Watermark.Text}"
                                TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
